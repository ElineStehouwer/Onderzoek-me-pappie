<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoMinSess">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="132dp"
        android:layout_height="131dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="279dp"
        android:background="#00302E2E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/puppy" />

    <Button
        android:id="@+id/play5Min"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_marginTop="248dp"
        android:onClick="onStart"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pause5Min"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:onClick="onPause"
        android:text="pause"
        app:layout_constraintStart_toStartOf="@+id/play5Min"
        app:layout_constraintTop_toBottomOf="@+id/play5Min" />
</androidx.constraintlayout.widget.ConstraintLayout>